<!--search 検索結果ページ-->
<!---->

<!--rangeが２ならBookの検索結果を表示-->
<table class='table'>
　<% if @range == '2' %>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinin</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |book| %>
      <tr>
        <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
  </tbody>


<!--それ以外はUserの検索結果を表示-->
  <% else %>
  <thead>
    <tr>
      <th>image</th>
      <th>Name</th>
      <th>introduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>
